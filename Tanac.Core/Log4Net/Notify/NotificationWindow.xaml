<Window x:Class="Tanac.Log4Net.Notify.NotificationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tanac.Log4Net.Notify"
             mc:Ignorable="d" 
             Topmost="True" ResizeMode="NoResize" WindowStyle="None" 
             AllowsTransparency="True" 
             Background="#00FFFFFF" 
             Height="100" Width="250">
    <Border BorderBrush="#FF0078D7" BorderThickness="2" CornerRadius="10" Background="#FFFFFFFF">
        <TextBlock Name="tbContent" Foreground="#FFFF0000" Background="#FFFFFFFF" FontSize="12" 
                   HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" 
                   MouseDown="tbContent_MouseDown"
                   MouseEnter="Window_MouseEnter" 
                   MouseLeave="Window_MouseLeave" />
    </Border>
</Window>
